<h1><%= @category.title %></h1>

<ul>
<% if user_signed_in? %>
  <% @category.items.each do |item| %>
    <li><%= item.title %> | <%= "$#{item.price.to_f/100}" %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></li>
  <% end %>
<% else %>
  <% @category.items.each do |item| %>
    <li><%= item.title %> | <%= "$#{item.price.to_f/100}" %></li>
  <% end %>
<% end %>
</ul>
